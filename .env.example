# WebMirror Environment Configuration
# Copy this file to .env and customize as needed

# Selenium Configuration
WEBMIRROR_SELENIUM_HEADLESS=true
WEBMIRROR_SELENIUM_DISABLE_GPU=true
WEBMIRROR_SELENIUM_WINDOW_SIZE=1920,1080
WEBMIRROR_SELENIUM_TIMEOUT=30
WEBMIRROR_SELENIUM_NO_SANDBOX=false

# Crawler Configuration
WEBMIRROR_MAX_DEPTH=0
WEBMIRROR_MAX_PAGES=0
WEBMIRROR_DELAY_MS=100
WEBMIRROR_WORKERS=5
WEBMIRROR_SAVE_PDF=true
WEBMIRROR_INCLUDE_ASSETS=true
WEBMIRROR_SAME_DOMAIN_ONLY=true
